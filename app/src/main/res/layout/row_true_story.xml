<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PictureAuthorStory"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/who32px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storyAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/katebackg"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/storyTimePublish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33 min"
                    android:textColor="@color/katebackg"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/storyImage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/white" />


            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_plus" />

            <ImageButton
                android:id="@+id/moreBtnAboutAuthor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/more3" />

        </LinearLayout>

        <TextView
            android:id="@+id/storyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="Title"
            android:textColor="@color/katebackg"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="The description"
            android:textColor="@color/katebackg"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/storyLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="1.2k Likes"
            android:textColor="@color/katebackg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/likeBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/like2" />


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>